<div class='span12'>
  <div class='hero-unit'>

    <div class='row-fluid'>
      <div class='span6'>
        <%= image_tag recipe.image_url %>
      </div>

      <div class='span6'>
        <h1><%= recipe.name %></h1>
        <p>Serves: <%= recipe.servings %></p>
        <p>Cook Time: <%= recipe.total_time %></p>
        <p><%= link_to "Instructions", recipe.source_url, target: "new" %></p>
        <%= button_to "Next Recipe", dashboard_path, method: :get %>
        <%= button_to "Add to Shopping List", list_path(recipe_id: recipe.id) %>
        <%= render partial: 'dashboard/random_toggle' %>
      </div>
    </div>

    <div class='row-fluid'>
      <h2>Ingredients</h2>
    </div>
    <div class='row-fluid'>
        <div class='span5'>
          <% recipe.ingredients.each_with_index do |ingredient, i| %>
            <% if i%2 == 0 %>
              <p><%= ingredient %></p>
            <% end %>
          <% end %>
        </div>
        <div class='span1'></div>
        <div class='span5'>
          <% recipe.ingredients.each_with_index do |ingredient, i| %>
            <% if i%2 == 1 %>
              <p><%= ingredient %></p>
            <% end %>
          <% end %>
        </div>
    </div>

  </div>
</div>


