group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'capybara-rails'
  gem 'launchy'
  gem 'vcr'
  gem 'webmock'
